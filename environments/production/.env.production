# StorySlip Production Environment Configuration
# This file contains production-specific environment variables

# Environment
NODE_ENV=production
ENVIRONMENT=production

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_URL=https://api.storyslip.com

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_URL=https://app.storyslip.com

# Marketing Site Configuration
MARKETING_PORT=3002
MARKETING_URL=https://storyslip.com

# Widget Configuration
WIDGET_CDN_URL=https://cdn.storyslip.com/widgets

# Database Configuration (Production Supabase Project)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY_PRODUCTION}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY_PRODUCTION}
DATABASE_URL=${DATABASE_URL_PRODUCTION}

# JWT Configuration
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=https://app.storyslip.com,https://storyslip.com,https://api.storyslip.com

# Session Configuration
SESSION_SECRET=${SESSION_SECRET_PRODUCTION}
COOKIE_DOMAIN=.storyslip.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=none

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY_PRODUCTION}
FROM_EMAIL=noreply@storyslip.com
FROM_NAME=StorySlip

# Redis Configuration
REDIS_URL=${REDIS_URL_PRODUCTION}
REDIS_PASSWORD=${REDIS_PASSWORD_PRODUCTION}

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_LOG_LEVEL=warn
MONITORING_RETENTION_DAYS=30

# Performance Configuration
PERF_CPU_WARNING_THRESHOLD=70
PERF_CPU_CRITICAL_THRESHOLD=85
PERF_MEMORY_WARNING_THRESHOLD=75
PERF_MEMORY_CRITICAL_THRESHOLD=90

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300
BCRYPT_ROUNDS=14

# Feature Flags
FEATURE_AI_CONTENT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_WHITE_LABELING=true
FEATURE_TEAM_MANAGEMENT=true

# External Services
OPENAI_API_KEY=${OPENAI_API_KEY_PRODUCTION}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_PRODUCTION}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PRODUCTION}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_PRODUCTION}

# Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID_PRODUCTION}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN_PRODUCTION}

# CDN Configuration
CDN_URL=https://cdn.storyslip.com
CDN_ENABLED=true

# Logging
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/storyslip/production.log

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/storyslip.crt
SSL_KEY_PATH=/etc/ssl/private/storyslip.key

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=90

# Security Headers
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
REFERRER_POLICY=strict-origin-when-cross-origin

# Development Tools (Disabled in production)
DEBUG=
ENABLE_PLAYGROUND=false
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_API_DOCS=false