# StorySlip Development Environment Configuration
# This file contains development-specific environment variables

# Environment
NODE_ENV=development
ENVIRONMENT=development

# API Configuration
API_PORT=3001
API_HOST=localhost
API_URL=http://localhost:3001

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_URL=http://localhost:3000

# Marketing Site Configuration
MARKETING_PORT=3002
MARKETING_URL=http://localhost:3002

# Widget Configuration
WIDGET_CDN_URL=http://localhost:3001/widgets

# Database Configuration (Development Supabase Project)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key
DATABASE_URL=postgresql://postgres:[password]@db.your-dev-project.supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET=your-dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3001

# Session Configuration
SESSION_SECRET=your-dev-session-secret-change-in-production
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Email Configuration (Development - Use test service)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-user
SMTP_PASS=your-ethereal-pass
FROM_EMAIL=noreply@dev.storyslip.com
FROM_NAME=StorySlip Development

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_LOG_LEVEL=debug
MONITORING_RETENTION_DAYS=7

# Performance Configuration
PERF_CPU_WARNING_THRESHOLD=80
PERF_CPU_CRITICAL_THRESHOLD=95
PERF_MEMORY_WARNING_THRESHOLD=85
PERF_MEMORY_CRITICAL_THRESHOLD=95

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=10

# Feature Flags
FEATURE_AI_CONTENT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_WHITE_LABELING=true
FEATURE_TEAM_MANAGEMENT=true

# External Services
OPENAI_API_KEY=your-openai-api-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# CDN Configuration
CDN_URL=http://localhost:3001
CDN_ENABLED=false

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/development.log

# Development Tools
DEBUG=storyslip:*
ENABLE_PLAYGROUND=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true