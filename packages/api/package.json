{
  "name": "@storyslip/api",
  "version": "1.0.0",
  "description": "StorySlip Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node simple-dev-server.js",
    "dev:full": "tsx watch src/index.ts",
    "build": "tsc",
    "build:production": "NODE_ENV=production tsc",
    "start": "node dist/index.js",
    "migrate": "node migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=src/__tests__/unit",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:all": "tsx src/__tests__/run-integration-tests.ts",
    "test:security": "tsx src/__tests__/security/vulnerability-scanner.ts",
    "test:security:simple": "tsx src/__tests__/simple-security-test.ts",
    "test:performance": "tsx src/__tests__/performance/performance-test-runner.ts",
    "test:performance:simple": "tsx src/__tests__/simple-performance-test.ts",
    "test:comprehensive": "tsx src/__tests__/comprehensive-test-runner.ts",
    "test:security-performance": "node test-security-performance.js",
    "test:production-readiness": "../../scripts/test-production-readiness.sh",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "marked": "^9.1.6",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "compression": "^1.7.4",
    "replicate": "^0.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.8",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/pg": "^8.10.7",
    "@types/compression": "^1.7.5",
    "@playwright/test": "^1.40.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.0"
  }
}